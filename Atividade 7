```c
#include <stdio.h>

int main() {
    float num1, num2, num3;
    printf("Digite o primeiro número real: ");
    scanf("%f", &num1);
    printf("Digite o segundo número real: ");
    scanf("%f", &num2);
    printf("Digite o terceiro número real: ");
    scanf("%f", &num3);
    float soma = num1 + num2 + num3;
    float subtracao = num1 - num2 - num3;
    float multiplicacao = num1 * num2 * num3;
    float divisao = (num2 != 0 && num3 != 0) ? num1 / (num2 * num3) : 0;
    printf("Soma: %.2f\n", soma);
    printf("Subtração: %.2f\n", subtracao);
    printf("Multiplicação: %.2f\n", multiplicacao);
    printf("Divisão: %.2f\n", divisao);
    return 0;
}
```
